pipeline {
    agent any

    stages {
        stage('Deploy') {
            steps {
                script {
                    // Укажите ID ваших учетных данных
                    def sshCredentialsId = 'ssh-olga'
                    def vmIp = '127.0.0.1'
                    def remotePath = 'apps/webbooks' // Путь на ВМ
                    def jarFileName = "digital-library-${env.VERSION}.jar"
                    def jarUrl = "http://localhost:8080/${jarFileName}"

                    // Подключение к ВМ и выполнение команд
                    sshagent(['ssh-olga']) { // Исправлено
                        sh """
                            ssh -o StrictHostKeyChecking=no ${env.SSH_USER}@${vmIp} 'mkdir -p ${remotePath}'
                            curl -o ${remotePath}/${jarFileName} ${jarUrl} // Исправлено
                            ssh -o StrictHostKeyChecking=no ${env.SSH_USER}@${vmIp} 'java -jar ${remotePath}/${jarFileName}' // Исправлено
                        """
                    }
                }
            }
        }
    }
}