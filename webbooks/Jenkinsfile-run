pipeline {
    agent any

    stages {
        stage('Deploy') {
            steps {
                script {
                    // Укажите ID ваших учетных данных
                    def sshCredentialsId = 'ssholga'
                    def vmIp = '127.0.0.1'
                    def remotePath = '/path/to/remote/directory' // Путь на ВМ
                    def jarFileName = "digital-library-${env.VERSION}.jar"
                    def jarUrl = "http://localhost:8080/${jarFileName}"

                    // Подключение к ВМ и выполнение команд
                    ssh agent([sshCredentialsId]) {
                        sh """
                            ssh ${env.SSH_USER}@${vmIp} 'mkdir -p ${remotePath}'
                            curl -o ${remotePath}/*.jar ${jarUrl}
                            ssh ${env.SSH_USER}@${vmIp} 'java -jar ${remotePath}/*.jar'
                        """
                          }
                        }
                    }
        }
    }
}