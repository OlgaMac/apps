pipeline {
    agent any

    stages {
        stage('Deploy') {
            steps {
                script {
                    // Укажите ID ваших учетных данных
                    def sshCredentialsId = 'ssh-olga'
                    def vmIp = '127.0.0.1'
                    def remotePath = 'https://github.com/OlgaMac/apps.git'
                    def jarUrl = 'https://github.com/OlgaMac/apps/packages'

                    // Подключение к ВМ и выполнение команд
                    sshagent([sshCredentialsId]) {
                        sh """
                            ssh ${env.SSH_USER}@${vmIp} 'mkdir -p ${remotePath}'
                            curl -o ${remotePath}/app.jar ${jarUrl}
                            ssh ${env.SSH_USER}@${vmIp} 'java -jar ${remotePath}/app.jar'
                        """
                          }
                        }
                    }
        }
    }
}